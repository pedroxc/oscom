10 ' SUNRAYS (MSX1 - SCREEN 2)
20 SCREEN 2:COLOR 15,1,1:CLS:DEFINT A-Z
30 CX=128:CY=96
40 FOR R=10 TO 90 STEP 10
50  FOR A=0 TO 360 STEP 15
60   X=INT(CX+R*COS(A*3.14159/180))
70   Y=INT(CY+R*SIN(A*3.14159/180))
80   C=1+((A/15+R/10) MOD 15)
90   LINE (CX,CY)-(X,Y),C
100  NEXT A
110 NEXT R
120 GOTO 120
