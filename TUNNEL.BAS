10 ' HYPER TUNNEL (MSX2 - SCREEN 8)
20 SCREEN 8:COLOR ,0:DEFINT A-Z:CLS
30 DIM SN(360),CS(360)
40 FOR I=0 TO 360: R=I*3.14159/180: SN(I)=SIN(R): CS(I)=COS(R): NEXT I
50 CX=128:CY=106:PH=0
60 WHILE INKEY$=""
70  CLS
80  FOR R=140 TO 10 STEP -8
90    A=(PH+R) MOD 360
100   X=INT(CX+R*CS(A)):Y=INT(CY+R*SN(A))
110   C=(R*2+PH) AND 255
120   CIRCLE (X,Y),R\4,C
130  NEXT R
140  PH=(PH+7) MOD 360
150 WEND
